#!/bin/sh
set -e

# Update GStreamer plugin registry after installation
if [ "$1" = "configure" ]; then
    # Update the GStreamer plugin cache
    if which gst-inspect-1.0 >/dev/null 2>&1; then
        echo "Updating GStreamer plugin registry..."
        # Run gst-inspect-1.0 to update the registry
        # Redirect output to avoid cluttering installation logs
        gst-inspect-1.0 uriplaylistbin >/dev/null 2>&1 || true
    fi
fi

#DEBHELPER#

exit 0