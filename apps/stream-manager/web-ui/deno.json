{
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --allow-sys --allow-ffi --allow-run --node-modules-dir npm:vite",
    "build": "deno run --allow-net --allow-read --allow-write --allow-env --allow-sys --allow-ffi --allow-run --node-modules-dir npm:vite build",
    "preview": "deno run --allow-net --allow-read --allow-write --allow-env --allow-sys --allow-ffi --allow-run --node-modules-dir npm:vite preview",
    "test": "deno test --allow-read --allow-env src/",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check src/**/*.ts src/**/*.tsx"
  },
  "compilerOptions": {
    "lib": ["deno.window", "dom", "dom.iterable", "dom.asynciterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "imports": {
    "react": "npm:react@^18.2.0",
    "react-dom": "npm:react-dom@^18.2.0",
    "@types/react": "npm:@types/react@^18.2.0",
    "@types/react-dom": "npm:@types/react-dom@^18.2.0",
    "vite": "npm:vite@^5.0.0",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.0.0",
    "tailwindcss": "npm:tailwindcss@^3.4.0",
    "autoprefixer": "npm:autoprefixer@^10.4.0",
    "postcss": "npm:postcss@^8.4.0",
    "axios": "npm:axios@^1.6.0",
    "react-router-dom": "npm:react-router-dom@^6.20.0",
    "@types/node": "npm:@types/node@^20.10.0"
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["node_modules/", "dist/"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "include": ["src/"],
    "exclude": ["node_modules/", "dist/"],
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  }
}