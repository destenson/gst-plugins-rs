{
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --allow-sys --allow-ffi --allow-run --node-modules-dir npm:vite",
    "build": "deno run --allow-net --allow-read --allow-write --allow-env --allow-sys --allow-ffi --allow-run --node-modules-dir npm:vite build",
    "preview": "deno run --allow-net --allow-read --allow-write --allow-env --allow-sys --allow-ffi --allow-run --node-modules-dir npm:vite preview",
    "test": "deno test --allow-read --allow-env src/",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check src/**/*.ts src/**/*.tsx"
  },
  "compilerOptions": {
    "lib": ["deno.window", "dom", "dom.iterable", "dom.asynciterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "imports": {
    "react": "npm:react@^18.3.1",
    "react-dom": "npm:react-dom@^18.3.1",
    "@types/react": "npm:@types/react@^18.3.24",
    "@types/react-dom": "npm:@types/react-dom@^18.3.7",
    "clsx": "npm:clsx@^2.1.1",
    "tailwind-merge": "npm:tailwind-merge@^3.3.1",
    "vite": "npm:vite@^5.4.20",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.7.0",
    "tailwindcss": "npm:tailwindcss@^3.4.17",
    "autoprefixer": "npm:autoprefixer@^10.4.21",
    "postcss": "npm:postcss@^8.5.6",
    "axios": "npm:axios@^1.12.2",
    "axios-retry": "npm:axios-retry@^4.5.0",
    "react-router-dom": "npm:react-router-dom@^6.30.1",
    "@types/node": "npm:@types/node@^20.19.17",
    "@heroicons/react": "npm:@heroicons/react@^2.2.0",
    "@headlessui/react": "npm:@headlessui/react@^1.7.19",
    "events": "npm:events@^3.3.0"
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["node_modules/", "dist/"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "include": ["src/"],
    "exclude": ["node_modules/", "dist/"],
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  }
}
